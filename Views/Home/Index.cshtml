@model IEnumerable<Library>


    
@{ 


    ViewBag.Title = "Library List";
    

}
 
<div class="card-deck">

    @foreach (var libraryBooks in Model)
    {
        var PhotoPath = "~/Image/" + (libraryBooks.PhotoPath ?? "BasicPhysics.jpg"); 


        <div class="card m-3" style="min-width: 18rem; max-width:30.5%;">
            <div class="card-header">
                <h3>@libraryBooks.NameofAuthor</h3>
            </div>
            <img class="card-img-top imageThumbnail" src="@PhotoPath" asp-append-version="true" />
            <div class=" card-footer text-center">

                <a asp-controller="home" asp-action="details" asp-route-id="@libraryBooks.Id"
                   class="btn btn-primary m-1">View</a>           
                <a  asp-action="edit" asp-controller="home" asp-route-id="@libraryBooks.Id"
                   class="btn btn-primary m-1">Edit</a>
                <a href="#" class="btn btn-primary m-1">Delete</a>
                
            </div>
        </div>
    }
</div>








